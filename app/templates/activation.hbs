{{#base-layout}}
<div class="signup-view container-fluid">
  <div class="container">
    <h1>Valida tu cuenta</h1>
    <div class="line-gray"></div>
    <h2>
      <strong>¡Casi estamos list@s!</strong>
      Enviaremos un código de verificación a tu número celular para activar tu cuenta.
    </h2>
    {{signup-steps
      selectedIndex=2}}
  </div>
  <div class="container signup-form single small">
    {{#bs-form onSubmit=(action 'formOnSubmit') autocomplete="off" as |form|}}
      <img class="img-responsive banner" src="/assets/images/numero_tc.png"
        alt="Valida tu cuenta">
      <div class="row">
        <div class="col-sm-12 single-field">
          {{bs-input model=user controlType="text" label="Confirma tu número celular*"
            placeholder="10 dígitos"
            property="phone" formIsSubmitted=formIsSubmitted}}
          {{bs-button class=submitBtnCls
            defaultText="Enviar código" type="primary" buttonType="submit"}}
        </div>
      </div>
    {{/bs-form}}
  </div>
</div>
{{/base-layout}}
